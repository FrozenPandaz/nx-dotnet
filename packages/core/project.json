{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/core/**/*.ts",
          "packages/core/generators.json",
          "packages/core/executors.json",
          "packages/core/package.json",
          "packages/core/migrations.json"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/core"],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "prebuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx ts-node tools/scripts/patch-package-versions --project core"
        ]
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/core",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "packageJson": "packages/core/package.json",
        "main": "packages/core/src/index.ts",
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "assets": [
          "packages/core/*.md",
          {
            "input": "./packages/core/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/core/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/core",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/core",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "",
            "glob": "CHANGELOG.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "./packages/core",
            "glob": "migrations.json",
            "output": "."
          }
        ]
      }
    },
    "noop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo"
      }
    },
    "build:test": {
      "command": "echo hello"
    }
  },
  "tags": []
}
